{
  "name": "@roninbuilders/modal-wagmi",
  "version": "0.2.6",
  "description": "Ronin Wallet Modal with Wagmi v2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsup --watch --onSuccess 'tsc --watch --emitDeclarationOnly'",
    "build": "tsup",
    "format": "pnpm dlx @biomejs/biome format src --write",
    "upload": "pnpm run build && pnpm publish",
    "clean": "rm -rf .turbo && rm -rf dist"
  },
  "sideEffects": false,
  "type": "module",
  "author": "Glitch-txs",
  "license": "MIT",
  "dependencies": {
    "@roninbuilders/modal": "workspace:^",
    "@roninbuilders/modal-ui": "workspace: *",
    "@sky-mavis/waypoint": "4.1.0",
    "@lit/react": "1.0.7"
  },
  "peerDependencies": {
    "@wagmi/connectors": ">=4.0.0",
    "@wagmi/core": ">=2.0.0",
    "typescript": ">=5",
    "vanilla-cafe": ">=0",
    "viem": ">=2.0.0",
    "react": ">=16"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "wallet",
    "ronin",
    "modal",
    "network",
    "web3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ronin-builders/ronin-modal"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "tsup": "^6.7.0",
    "@types/react": "^19.0.10"
  }
}

{
  "name": "@roninbuilders/modal",
  "version": "0.4.0",
  "description": "Framework agnostic Ronin Wallet Modal for Websites",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./siwe": {
      "import": "./dist/siwe.js",
      "types": "./dist/siwe.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsup --watch --onSuccess 'tsc --watch --emitDeclarationOnly'",
    "build": "tsup",
    "format": "pnpm dlx @biomejs/biome format src --write",
    "upload": "pnpm run build && pnpm publish",
    "clean": "rm -rf .turbo && rm -rf dist"
  },
  "sideEffects": false,
  "type": "module",
  "author": "Glitch-txs",
  "license": "MIT",
  "dependencies": {
    "@lit/react": "1.0.7",
    "@roninbuilders/modal-ui": "workspace: *",
    "@sky-mavis/waypoint": "4.1.0",
    "@w3vm/core": "0.0.4",
    "@w3vm/walletconnect": "0.0.9"
  },
  "peerDependencies": {
    "@roninbuilders/siwe": ">=0",
    "react": ">=16",
    "typescript": ">=5",
    "vanilla-cafe": ">=0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "@roninbuilders/siwe": {
      "optional": true
    }
  },
  "keywords": [
    "wallet",
    "ronin",
    "modal",
    "network",
    "web3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ronin-builders/ronin-modal"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "tsup": "^6.7.0",
    "@types/react": "^19.0.10"
  }
}
